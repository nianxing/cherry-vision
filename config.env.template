# Cherry Vision - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Azure Configuration
# =============================================================================

# Azure Subscription and Resource Group
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=cherry-vision-rg
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Azure Machine Learning
AZURE_ML_WORKSPACE_NAME=cherry-vision-ml
AZURE_ML_REGION=eastus

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=cherryvisiondata
AZURE_STORAGE_CONTAINER_NAME=images
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Azure Database for PostgreSQL
AZURE_DB_SERVER=cherry-vision-db.postgres.database.azure.com
AZURE_DB_NAME=cherry_vision
AZURE_DB_USERNAME=dbadmin
AZURE_DB_PASSWORD=your-secure-db-password

# Azure Cache for Redis
AZURE_REDIS_HOSTNAME=cherry-vision-cache.redis.cache.windows.net
AZURE_REDIS_PORT=6380
AZURE_REDIS_PASSWORD=your-redis-password

# Azure Service Bus
AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://...

# Azure Container Registry
AZURE_CONTAINER_REGISTRY=cherryregistry.azurecr.io
AZURE_CONTAINER_REGISTRY_USERNAME=cherryregistry
AZURE_CONTAINER_REGISTRY_PASSWORD=your-acr-password

# =============================================================================
# Application Configuration
# =============================================================================

# Database
DATABASE_URL=postgresql://dbadmin:${AZURE_DB_PASSWORD}@${AZURE_DB_SERVER}:5432/${AZURE_DB_NAME}

# Redis Cache
REDIS_URL=rediss://:${AZURE_REDIS_PASSWORD}@${AZURE_REDIS_HOSTNAME}:${AZURE_REDIS_PORT}/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=your-super-secret-api-key-here

# JWT Token Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Hardware Configuration
# =============================================================================

# DJI Drone Configuration
DJI_APP_KEY=your-dji-app-key
DJI_APP_SECRET=your-dji-app-secret

# FLIR Camera Configuration
FLIR_CAMERA_COUNT=20
FLIR_IMAGE_FORMAT=RGB24

# Jetson Nano Configuration
JETSON_DEVICE_COUNT=24
JETSON_MODEL_PATH=/opt/cherry-vision/models/

# =============================================================================
# AI Model Configuration
# =============================================================================

# YOLOv8 Detection Model
YOLO_MODEL_PATH=models/yolov8_cherry.pt
YOLO_CONFIDENCE_THRESHOLD=0.9
YOLO_IOU_THRESHOLD=0.45

# ResNet-50 Classification Model
RESNET_MODEL_PATH=models/resnet50_grading.pt
RESNET_CONFIDENCE_THRESHOLD=0.85

# TensorRT Optimization
TENSORRT_ENGINE_PATH=/opt/tensorrt/engines/
TENSORRT_PRECISION=FP16

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Logging Level
LOG_LEVEL=INFO
LOG_FORMAT=json

# Prometheus Metrics
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Grafana Dashboard
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin

# =============================================================================
# Development Configuration
# =============================================================================

# Environment
ENVIRONMENT=development

# Debug Mode
DEBUG=true

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_AZURE_APP_ID=${AZURE_CLIENT_ID}

# Local Development Services
LOCAL_POSTGRES_PORT=5432
LOCAL_REDIS_PORT=6379
LOCAL_AZURITE_BLOB_PORT=10000

